@model MVCProject1.Models.Products

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="direction:rtl">
    ویرایش محصول
    @Model.BrandName
</h2>

<label style="font-size:35px; color:darkblue;direction:rtl;">
    @ViewBag.Message
</label>

@using (Html.BeginForm())
{
<div class="form-horizontal" style="direction:rtl">
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        @Html.DisplayNameFor(x => x.CountryId)
        @Html.DropDownListFor(x => x.CountryId, (SelectList)ViewBag.Countries, "کشورسازنده را انتخاب نمایید", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CountryId)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.CompanyId)
        @Html.DropDownListFor(x => x.CompanyId, (SelectList)ViewBag.Companies, "شرکت سازنده را انتخاب نمایید", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CompanyId)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.CategoryId)
        @Html.DropDownListFor(x => x.CategoryId, (SelectList)ViewBag.Categories, "طبقه بندی  را انتخاب نمایید", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryId)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.BrandName)
        @Html.TextBoxFor(x => x.BrandName, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.BrandName, null, new { @class = "label-danger" })
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.ModelNo)
        @Html.TextBoxFor(x => x.ModelNo, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ModelNo)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.Description)
        @Html.TextBoxFor(x => x.Description, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description)
    </div>
   
    
   
    
   
    <div>
        <input type="submit" value="ویرایش" class="btn btn-success btn-block" />
    </div>
</div>
}